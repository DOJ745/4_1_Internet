<!DOCTYPE html>
<html>

<head>
    <title>LB3</title>
    <meta charset="utf-8" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
    <h2>LB3 - WebApp</h2>
    <br />

    <label>Choose respose data type:</label>
    <input type="radio" class="data-type" name="data-type" value="json" checked="checked">
    <label for="json_type">JSON</label>

    <input type="radio" class="data-type" name="data-type" value="xml">
    <label for="xml_type">XML</label>
    <br />
    <hr />

    <button id="btn-get-list">GET LIST</button>
    <br /><br />
    <input id="student-list" type="text" disabled />
    <br /><br />
    <hr />


    <label>LIMIT:</label>
    <input id="limit-input" type="text">
    <button id="btn-post">SET LIMIT</button>
    <br /><br />

    <label>SORT:</label>
    <button id="set-sort" value="sort">SET SORT</button>
    <br /><br />

    <label>OFFSET:</label>
    <input id="offset-input" type="text">
    <br /><br />
    <hr />


    <label>ADD STUDENT:</label>
    <input id="txt-post" type="text">
    <br />
    <button id="btn-post">POST</button>
    <br /><br />
    <hr />


    <label>UPDATE STUDENT BY ID:</label>
    <input id="txt-put" type="text">
    <br />
    <button id="btn-put">PUT</button>
    <br /><br />
    <hr />


    <label>DELETE STUDENT BY ID:</label>
    <button id="btn-delete">DELETE</button>
    <hr />


    <label>INFO HERE:</label>
    <input id="txt-stat" type="text" disabled />


</body>
</html>

@Scripts.Render("~/Scripts/Ajax.js")